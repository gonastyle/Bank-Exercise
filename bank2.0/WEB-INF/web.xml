<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>
    <servlet-name>adminLoginServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.AdminLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userLoginServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.UserLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>adminLoginOutServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.AdminLoginOutServlet</servlet-class>
  </servlet>
 <servlet>
    <servlet-name>userLoginOutServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.UserLoginOutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>showAllAdminServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.ShowAllAdminServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>showAllUserServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.ShowAllUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>modifyAdminPwdServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.ModifyAdminPwdServlet</servlet-class>
  </servlet>
 <servlet>
    <servlet-name>modifyUserPwdServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.ModifyUserPwdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>findUserMoneyServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.FindUserMoneyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>saveMoneyServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.SaveMoneyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>takeMoneyServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.TakeMoneyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>transferMoneyServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.TransferMoneyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>registerUserServlet</servlet-name>
    <servlet-class>com.cx.bank.controller.RegisterUserServlet</servlet-class>
  </servlet>




  <servlet-mapping>
    <servlet-name>adminLoginServlet</servlet-name>
    <url-pattern>/adminLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userLoginServlet</servlet-name>
    <url-pattern>/userLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>adminLoginOutServlet</servlet-name>
    <url-pattern>/adminLoginOutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userLoginOutServlet</servlet-name>
    <url-pattern>/userLoginOutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>showAllAdminServlet</servlet-name>
    <url-pattern>/showAllAdminServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>showAllUserServlet</servlet-name>
    <url-pattern>/showAllUserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>modifyAdminPwdServlet</servlet-name>
    <url-pattern>/modifyAdminPwdServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>modifyUserPwdServlet</servlet-name>
    <url-pattern>/modifyUserPwdServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>findUserMoneyServlet</servlet-name>
    <url-pattern>/findUserMoneyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>saveMoneyServlet</servlet-name>
    <url-pattern>/saveMoneyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>takeMoneyServlet</servlet-name>
    <url-pattern>/takeMoneyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>transferMoneyServlet</servlet-name>
    <url-pattern>/transferMoneyServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>registerUserServlet</servlet-name>
    <url-pattern>/registerUserServlet</url-pattern>
  </servlet-mapping>
  
  
  
  <filter>
	<filter-name>encoding</filter-name>
	<filter-class>com.cx.bank.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
	<filter-name>encoding</filter-name>
	<url-pattern>/*</url-pattern>
  </filter-mapping>
  	
  	
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
